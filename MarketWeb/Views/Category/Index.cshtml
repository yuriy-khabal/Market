@model List<Category>

<partial name="_Notification"/>
<div class = "container">
     <div class="row pt-4">
         <div class="col-6">
             <h2 class="text-primary">
                 Category List 
             </h2>
         </div>
         <div class="col-6 text-end">
              <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                  <i class ="bi-plus-circle"></i> Create Category
              </a>
         </div>
     </div>
    <table class ="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.OrderBy(t => t.DisplayOrder))
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>